{
  "permissions": {
    "allow": [],
    "deny": [
      "Read(**/*.key)",
      "Read(**/.aws/**)",
      "Read(**/.env*)",
      "Read(**/.pem*)",
      "Read(**/.ssh/**)",
      "Read(**/config/database.yml)",
      "Read(**/credentials/**)",
      "Read(**/docker-compose*.yml)",
      "Read(**/secrets/**)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "uv run --no-project --script ${CLAUDE_PLUGIN_ROOT}/scripts/statusline.py",
    "padding": 0
  },
  "alwaysThinkingEnabled": true
}
